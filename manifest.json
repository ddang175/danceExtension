{
    "name": "UMOVE",
    "description": "Help people learn choreographies",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "activeTab",
        "storage",
        "webRequest"
    ],
    "host_permissions": [
        "*://*.youtube.com/*",
        "*://*.googlevideo.com/*",
        "*://*.googleads.com/*",
        "*://*.doubleclick.net/*"
    ],
    "content_scripts": [
        {
            "matches": ["*://*.youtube.com/*"],
            "js": ["content.js"],
            "css": ["content.css"],
            "run_at": "document_end"
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": "icons/icon.jpg"
    },
    "web_accessible_resources": [
        {
            "resources": ["*"],
            "matches": ["*://*.youtube.com/*"]
        }
    ]
}